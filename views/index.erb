<div class="container">

<div class="parallax">
   <div class="banner">
    <h1 class="text-center">BuzzPosts</h1>
  </div>
</div>


<!-- <img src="/images/600.jpeg" alt=""> -->

<% @posts = DB %>
<% @posts_comments = COMMENTS %>

<div class="post-container">
  <% @posts.each do |post| %>
  <div class="post-title">
    <h3 class="text-center"><bold><%= post[:title] %></bold></h3>
  </div>
    <div class="post-content">
      <p><%= post[:content] %></p>
    </div>
      <div class="post-rating">
        <div class="stars">
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
        </div>

       <p><%= post[:rating] %></p>
      </div>
        <div class="post-comments">
          <% @posts_comments.each do |post| %>
          <p><%= post.sample.capitalize %></p>
          <% end %>
        </div>
  <% end %>
</div>
<br>
</div>

